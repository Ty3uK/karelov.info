.sidebar
  picture
    source(srcset='/../static/photo.webp' type='image/webp')
    img.sidebar_photo(src='/../static/photo.jpg')

  div.sidebar_info_block
    if config.author_name
      h1.sidebar_title #{config.author_name}

    if config.github_user_name
      div.sidebar_info
        svg.sidebar_info_icon(width='16px' height='15.6px' aria-label='GitHub' viewbox='0 0 16 15.6' xmlns='http://www.w3.org/2000/svg')
          path(fill-rule='evenodd' d='M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0 0 16 8c0-4.42-3.58-8-8-8z')
        a.sidebar_info_link(href=('https://github.com/' + config.github_user_name)) @#{config.github_user_name}

    if config.author_email
      div.sidebar_info
        svg.sidebar_info_icon(width='14px' height='10px' aria-label='email' viewbox='0 0 14 10' xmlns='http://www.w3.org/2000/svg')
          path(fill-rule='evenodd' d='M 0 1 L 0 9 C 0 9.55 0.45 10 1 10 L 13 10 C 13.55 10 14 9.55 14 9 L 14 1 C 14 0.45 13.55 0 13 0 L 1 0 C 0.45 0 0 0.45 0 1 Z M 13 1 L 7 6 L 1 1 L 13 1 Z M 1 2.5 L 5 5.5 L 1 8.5 L 1 2.5 Z M 2 9 L 5.5 6 L 7 7.5 L 8.5 6 L 12 9 L 2 9 Z M 13 8.5 L 9 5.5 L 13 2.5 L 13 8.5 Z')
        a.sidebar_info_link(href=('mailto:' + config.author_email)) #{config.author_email}

    if config.author_location
      div.sidebar_info
        svg.sidebar_info_icon(width='12px' height='16px' aria-label='Location' viewbox='0 0 12 16' xmlns='http://www.w3.org/2000/svg')
          path(fill-rule='evenodd' d='M6 0C2.69 0 0 2.5 0 5.5 0 10.02 6 16 6 16s6-5.98 6-10.5C12 2.5 9.31 0 6 0zm0 14.55C4.14 12.52 1 8.44 1 5.5 1 3.02 3.25 1 6 1c1.34 0 2.61.48 3.56 1.36.92.86 1.44 1.97 1.44 3.14 0 2.94-3.14 7.02-5 9.05zM8 5.5c0 1.11-.89 2-2 2-1.11 0-2-.89-2-2 0-1.11.89-2 2-2 1.11 0 2 .89 2 2z')
        if config.author_location_link
          a.sidebar_info_link(href=config.author_location_link) #{config.author_location}
        else
          | #{config.author_location}

    if config.social
      div.sidebar_social
        each account, social in config.social
          if socialMedia[social]
            - const item = socialMedia[social]

            a.sidebar_social_link(href=(item.profile_url_prefix + account) aria-label=(item.name + ': ' + account))
              | !{socialMedia[social].icon_svg}
